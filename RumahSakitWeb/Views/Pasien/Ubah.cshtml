@model RumahSakitWeb.Models.Pasien

@{
    ViewData["Title"] = "Ubah Data Pasien";
}

<div>
    <span class="h2">Ubah Data Pasien</span>
 <a class="btn btn-primary float-end" asp-action="index">Kembali</a>
</div>

<div class="row">

    <div class="">

        <form asp-action="Ubah">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mt-3 form-group">
                <label asp-for="Nama" class="control-label"></label>
                <input asp-for="Nama" class="form-control" />
                <span asp-validation-for="Nama" class="text-danger"></span>
            </div>
            <div class="mt-3 form-group">
                <label asp-for="Alamat" class="control-label"></label>
                <input asp-for="Alamat" class="form-control" />
                <span asp-validation-for="Alamat" class="text-danger"></span>
            </div>
            <div class="mt-3 form-group">
                <label asp-for="NoTelp" class="control-label"></label>
                <input asp-for="NoTelp" class="form-control" />
                <span asp-validation-for="NoTelp" class="text-danger"></span>
            </div>
            <div class="mt-3 form-group ">
                <label asp-for="TglLahir" class="control-label"></label>
                <input asp-for="TglLahir" class="form-control" />
                <span asp-validation-for="TglLahir" class="text-danger"></span>
            </div>
     
            <div class="mt-3 form-group row">
                <input type="submit" value="Simpan" class="btn btn-primary" />
            </div>


        </form>

    </div>

</div>

