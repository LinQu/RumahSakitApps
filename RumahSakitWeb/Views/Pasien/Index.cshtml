@{
}

@model IEnumerable<RumahSakitWeb.Models.Pasien>

@{
    ViewData["Title"] = "Master Pasien";
}

<h2>Master Pasien</h2>

<p>
    <a class="btn btn-primary" asp-action="Tambah">Create New</a>
</p>
<table class="table table-stripped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alamat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TglLahir)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoTelp)
            </th>
            <th>
                Aksi
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nama)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alamat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TglLahir)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoTelp)
                </td>
                <td>
                    <a asp-action="Ubah" class="btn btn-warning" asp-route-id="@item.ID">Edit</a> 
                    <a asp-action="Hapus" class="btn btn-danger" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

